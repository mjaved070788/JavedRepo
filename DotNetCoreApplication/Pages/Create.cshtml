@page
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@model DotNetCoreApplication.Pages.CreateModel
@{
    
}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<style type="text/css">
    div {
        border-radius: 5px;
        background-color:#fff;     
        padding-bottom:3px;
        width:80%;
    }
</style>
<br/>
<h2>New Employee Details</h2>

<form method="post">

    @if (Model.errorMessage.Length > 0)
    {
        <div class="row col-md-12">
            <div class="col-md-9">
                <div class="alert alert-warning alert-dismissible" role="alert">
                    <strong>@Model.errorMessage</strong>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true" data-dismiss="alert">&times;</span>
                    </button>
                </div>
        </div>
        </div>
    }
    <div class="row col-md-12" >
        <label class="col-md-1 col-form-label">Name</label>
        <div class="col-md-6">
            <input type="text" class="form-control" name="Name" id="txtName" value="@Model.objempInfo.Name" />
        </div>
    </div>

    <div class="row col-md-12" >
        <label class="col-md-1 col-form-label">Age</label>
        <div class="col-md-6">
            <input type="text" class="form-control" name="Age" id="txtAge" value="@Model.objempInfo.Age" />
        </div>
    </div>

    <div class="row col-md-12">
        <label class="col-md-1 col-form-label">Address</label>
        <div class="col-md-6">
            <input type="text" class="form-control" name="Address" id="txtAddress" value="@Model.objempInfo.Address" />
        </div>
    </div>

    <div class="row col-md-12">
        <label class="col-md-1 col-form-label">Mobile</label>
        <div class="col-md-6">
            <input type="text" class="form-control" name="Mobile" id="txtMobile" value="@Model.objempInfo.Mobile" />
        </div>
    </div>

    <div class="row col-md-12">
        <div class="col-md-1">
        </div>
        <div class="col-md-6">
            <input type="submit" value="Submit" asp-page-handler="Submit" class="btn btn-primary" />
            &nbsp;<button type="button" class="btn btn-secondary" onclick="window.location='/emplist'">Exit</button>
        </div>
    </div>

    @if (Model.successMessage.Length > 0)
    {
        <div class="row col-md-12">
            <div class="col-md-9">
                <div class="alert alert-success alert-dismissible" role="alert">
                    <strong>@Model.successMessage</strong>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true" data-dismiss="alert">&times;</span>
                    </button>
                </div>
            </div>
        </div>
    }

    
</form>








